
     
// GLOBAL


#version 3.6;
#declare bg = <&BGCOLOUR&>;
global_settings
{       
  ambient_light color rgb <0.5, 0.5, 0.5>
  charset ascii
}


// LIGHT


#declare P_light =
light_source // main light
{
  <&LIGHT&>
  colour rgb <&SPOTLIGHTCOLOUR&>
  area_light <20, 0, 0>, <0, 0, 20>, 5, 5
  adaptive 1
  jitter
  &SHADOWLESS&
}

#declare env_light = <0.501, 0.462, 0.423>;

#declare P_light_1 =
light_source // environmental 1
{
  <-2600, 2271.51, 873.55>
  colour rgb env_light
  &SHADOWLESS&
}

#declare P_light_2 =
light_source // environmental 2
{
  <-2600.0, -391.369, 873.55>
  colour rgb env_light
  &SHADOWLESS&
}

#declare P_light_3 =           
