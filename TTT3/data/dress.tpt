// CAMERA


#declare locus = <&CAMERA&>;
#declare lookat = <&TARGET&>;
#declare P_cam =
camera
{
  sky <0, 0, 1>
  up y
  right x*-3/4
  location locus
  look_at lookat
  angle 26
}


